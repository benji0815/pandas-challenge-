   "source": [
    "#Generating the District Summary data frame\n",
    "\n",
    "# Total number of schools\n",
    "total_schools = len(school_data_complete[\"school_name\"].unique())\n",
    "\n",
    "# Finding out the number of the number of students in the dataframe\n",
    "total_students = school_data_complete['student_name'].count()\n",
    "\n",
    "# Total budget\n",
    "total_budget = school_data_complete[\"budget\"].unique().sum()\n",
    "\n",
    "# Average math score\n",
    "average_math = school_data_complete['math_score'].mean()\n",
    "\n",
    "# Average reading score\n",
    "average_reading = school_data_complete['reading_score'].mean()\n",
    "\n",
    "#passing rate\n",
    "overall_passing = (average_math + average_reading)/2\n",
    "\n",
    "# math passing\n",
    "math_passing = ((school_data_complete[\"math_score\"] >=70).sum()/number_students)*100\n",
    "\n",
    "# read passing \n",
    "read_passing = ((school_data_complete[\"reading_score\"] >=70).sum()/number_students)*100\n",
    "\n",
    "# Generating the data frame to hold the results\n",
    "District_summary_df = pd.DataFrame([{\"Total Schools\":total_schools, \n",
    "                 \"Total Students\":total_students, \n",
    "                 \"Total Budget\":total_budget, \n",
    "                 \"Average Math Score\":average_math, \n",
    "                 \"Average Reading Score\":average_reading, \n",
    "                 \"% Passing Math\":math_passing, \n",
    "                 \"% Passing Reading\":read_passing, \n",
    "                 \"% Overall Passing Rate\": overall_passing}])\n",
    "\n",
    "District_summary_df"
   ]
  },
