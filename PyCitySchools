   "source": [
    "# Generating the school Summary\n",
    "\n",
    "# type of school\n",
    "school_type = school_data.set_index([\"school_name\"])[\"type\"]\n",
    "\n",
    "# Number of students by school\n",
    "total_students_school = school_data_complete[\"school_name\"].value_counts()\n",
    "\n",
    "# Budget by school\n",
    "budget_by_school = school_data_complete.groupby([\"school_name\"]).mean()[\"budget\"]\n",
    "\n",
    "# Budget by students - simply taking the budget by school and dividing it by the total number of students by school\n",
    "budget_by_student = budget_by_school/total_students_school\n",
    "\n",
    "# Average math scrore by school\n",
    "average_math_by_school = school_data_complete.groupby([\"school_name\"]).mean()[\"math_score\"]\n",
    "\n",
    "# Average reading scrore by school\n",
    "average_read_by_school = school_data_complete.groupby([\"school_name\"]).mean()[\"reading_score\"]\n",
    "\n",
    "# Passing math by school\n",
    "# creating a data frame just to get the students having a score of 70 or above\n",
    "gloabl_student_math = school_data_complete[(school_data_complete[\"math_score\"]>=70)]\n",
    "student_maths_by_school = gloabl_student_math.groupby([\"school_name\"]).count()[\"Student ID\"]\n",
    "percent_math_by_school = (student_maths_by_school/total_students_school)*100\n",
    "\n",
    "# Passing read by school\n",
    "gloabl_student_read = school_data_complete[(school_data_complete[\"reading_score\"]>=70)]\n",
    "student_read_by_school = gloabl_student_read.groupby([\"school_name\"]).count()[\"Student ID\"]\n",
    "percent_read_by_school = (student_read_by_school/total_students_school)*100\n",
    "\n",
    "# Determining overall passing \n",
    "overall_passing_rate = (percent_math_by_school + percent_read_by_school)/2\n",
    "\n",
    "#Creating the school data frame\n",
    "school_summary = pd.DataFrame({\"School Type\":school_type, \n",
    "                 \"Total Students\":total_students_school, \n",
    "                 \"Total School Budget\":budget_by_school,\n",
    "                 \"Per Student Budget\":budget_by_student,           \n",
    "                 \"Average Math Score\":average_math_by_school, \n",
    "                 \"Average Reading Score\":average_read_by_school, \n",
    "                 \"% Passing Math\":percent_math_by_school, \n",
    "                 \"% Passing Reading\":percent_read_by_school, \n",
