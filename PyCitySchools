   "source": [
    "# We need to divide the budget by the size to be able to split into the bins\n",
    "school_data_complete['spending_bins'] = pd.cut(school_data_complete[\"budget\"]/school_data_complete[\"size\"], spending_bins, labels = group_names)\n",
    "\n",
    "# Then we need to group by spending\n",
    "score_by_spending = school_data_complete.groupby('spending_bins')\n",
    "\n",
    "# Calculations for the table\n",
    "spending_by_math = score_by_spending['math_score'].mean()\n",
    "spending_by_read = score_by_spending['reading_score'].mean()\n",
    "\n",
    "\n",
    "spending_pass_math = school_data_complete[school_data_complete['math_score'] >= 70].groupby('spending_bins')['gender'].count()/score_by_spending['gender'].count()\n",
    "spending_pass_read = school_data_complete[school_data_complete['reading_score'] >= 70].groupby('spending_bins')['gender'].count()/score_by_spending['gender'].count()\n",
    "spending_overall = school_data_complete[(school_data_complete['math_score'] >= 70) & (school_data_complete['reading_score'] >= 70)].groupby('spending_bins')['gender'].count()/score_by_spending['gender'].count()\n",
    "\n",
    "\n",
    "#  store all data into a dataframe\n",
    "\n",
    "school_spending_df = pd.DataFrame({\n",
    "    \"Average Math Score\":spending_by_math,\n",
    "    \"Average Reading Score\":spending_by_read,\n",
    "    \"% Passing Math\":spending_pass_math,\n",
    "    \"% Passing Read\":spending_pass_read,\n",
    "    \"% Overall Spending\":spending_overall\n",
    "})\n",
    "\n",
    "school_spending_df"
   ]
  },
